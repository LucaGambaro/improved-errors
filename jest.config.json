{
  "preset": "ts-jest",
  "verbose": true,
  "rootDir": "./src",
  "testPathIgnorePatterns": [
    "<rootDir>/__tests__/__utils__/",
    "<rootDir>/__tests__/__mocks__/"
  ],
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "/__tests__/.+\\.(test|spec)\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}
